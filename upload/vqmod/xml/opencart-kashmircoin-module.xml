<modification>
	<id>Makes the modifications necessary to conveniently use KashmirCoin module</id>
	<version>1.0</version>
	<vqmver>2.3.2</vqmver>
	<author>KashmirCoin Developers</author>

	<file name="catalog/model/checkout/order.php">
		<operation>
			<search position="after"><![CDATA[
				'currency_value'          => $order_query->row['currency_value'],]]></search>
			<add><![CDATA[
				'kashmircoin_total'          => $order_query->row['kashmircoin_total'],
				'kashmircoin_address'        => $order_query->row['kashmircoin_address'],]]></add>
		</operation>
	</file>
</modification>
